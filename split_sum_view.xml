<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplitSumController">

    <TextView
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sUser"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/totalCalcer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user">

        <TableLayout
            android:id="@+id/mainTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefName" />

                <EditText
                    android:id="@+id/3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefQuant" />

                <EditText
                    android:id="@+id/4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefPrice" />

                <CheckBox
                    android:id="@+id/5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/6"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefTax" />

                <TextView
                    android:id="@+id/7"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefPriceWTax" />


            </TableRow>

            <TableRow
                android:id="@+id/8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/9"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefName" />

                <EditText
                    android:id="@+id/10"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefQuant" />

                <EditText
                    android:id="@+id/11"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefPrice" />

                <CheckBox
                    android:id="@+id/12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/13"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefTax" />

                <TextView
                    android:id="@+id/14"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefPriceWTax" />


            </TableRow>

            <TableRow
                android:id="@+id/15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/16"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefName" />

                <EditText
                    android:id="@+id/17"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefQuant" />

                <EditText
                    android:id="@+id/18"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefPrice" />

                <CheckBox
                    android:id="@+id/19"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/20"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefTax" />

                <TextView
                    android:id="@+id/21"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefPriceWTax" />


            </TableRow>

            <TableRow
                android:id="@+id/22"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/23"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefName" />

                <EditText
                    android:id="@+id/24"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefQuant" />

                <EditText
                    android:id="@+id/25"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefPrice" />

                <CheckBox
                    android:id="@+id/26"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/27"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefTax" />

                <TextView
                    android:id="@+id/28"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefPriceWTax" />


            </TableRow>

            <TableRow
                android:id="@+id/29"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/30"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefName" />

                <EditText
                    android:id="@+id/31"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefQuant" />

                <EditText
                    android:id="@+id/32"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefPrice" />

                <CheckBox
                    android:id="@+id/33"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/34"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefTax" />

                <TextView
                    android:id="@+id/35"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefPriceWTax" />


            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/totalCalcer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/sCalcButton"
        app:layout_constraintBottom_toTopOf="@+id/staticTextToSplit"
        app:layout_constraintEnd_toStartOf="@+id/totalTax"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalSum"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:text="@string/sTotalPrice"
        app:layout_constraintBottom_toTopOf="@+id/splitSum"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/totalTax"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:text="@string/sTotalTax"
        app:layout_constraintBottom_toTopOf="@+id/staticTextToSplit"
        app:layout_constraintEnd_toStartOf="@+id/totalSum" />

    <TextView
        android:id="@+id/staticTextToSplit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/sStaticTextSplitRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/splitSum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/splitSum"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:text="@string/sSplitSum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>