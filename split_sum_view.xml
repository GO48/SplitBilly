<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplitSumController">

    <TextView
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sUser"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/totalCalcer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user">

        <TableLayout
            android:id="@+id/mainTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/entry1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/entry1Name"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefName" />

                <EditText
                    android:id="@+id/entry1Quantity"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefQuant" />

                <EditText
                    android:id="@+id/entry1Price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/sDefPrice" />

                <CheckBox
                    android:id="@+id/entry1Check"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/entry1Tax"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefTax" />

                <TextView
                    android:id="@+id/entry1PriceWTax"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="@string/sDefPriceWTax" />


            </TableRow>

            <TableRow
                android:id="@+id/entry2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/rowAdder"
                    android:layout_width="0dp"
                    android:layout_span="6"
                    android:text="@string/sAddRow"
                    android:textSize="18sp"
                    android:onClick="createTableRow">

                </Button>
            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/totalCalcer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/sCalcButton"
        app:layout_constraintBottom_toTopOf="@+id/staticTextToSplit"
        app:layout_constraintEnd_toStartOf="@+id/totalTax"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalSum"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:text="@string/sTotalPrice"
        app:layout_constraintBottom_toTopOf="@+id/splitSum"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/totalTax"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:text="@string/sTotalTax"
        app:layout_constraintBottom_toTopOf="@+id/staticTextToSplit"
        app:layout_constraintEnd_toStartOf="@+id/totalSum" />

    <TextView
        android:id="@+id/staticTextToSplit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/sStaticTextSplitRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/splitSum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/splitSum"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:text="@string/sSplitSum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>